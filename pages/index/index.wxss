/**index.wxss**/

.container {
  position: relative;
}
.data-info {
  padding-bottom: 40rpx;
}
.title {
  display: block;
  text-align: center;
  color: #333;
  font-size: 36rpx;
}
.card {
  margin: 20rpx 20rpx 0;
  padding: 68rpx 40rpx;
  position: relative;
}
.card > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.package-data {
  display: flex;
  color: white;
}
.package-data canvas {
  height: 320rpx;
  width: 300rpx;
  z-index: 99;
} 
.package-data > view {
  flex: 1;
  z-index: 99;
}
.package-data view > text {
  display: block;
}
.package-data view > text:nth-child(1) {
  font-size: 40rpx;
  margin-bottom: 30rpx;
}
.package-data view > text:nth-child(2) {
  height: 44rpx;
  padding-left: 20rpx;
  border-radius: 22rpx;
}
.package-data view > text:nth-child(3) {
  padding-left: 20rpx;
  height: 44rpx;
  border-radius: 22rpx;
  margin: 20rpx 0 50rpx;
}
.package-data view > text:nth-child(4) {
  font-size: 30rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
}
.flow-emergency {
  background: #F93F42;
}
.flow-normal {
  border: 1px solid white;
}
.ft12 {
  font-size: 24rpx;
  /* white-space:nowrap; */
  overflow: hidden;
  text-overflow:ellipsis;
}
.ft16 {
  font-size: 32rpx;
  line-height: 44rpx;
}
.account-data {
  margin-top: 30rpx;
  display: flex;
  color: white;
  font-size: 26rpx;
  line-height: 36rpx;
}
.account-data > view {
  flex: 1;
  text-align: center;
  z-index: 99;
}
.account-data > text {
  width: 1px;
  margin-top: 14rpx;
  height: 60rpx;
  background: #ddd;
  z-index: 99;
}
.account-value {
  display: block;
  font-size: 36rpx;
  line-height: 50rpx;
}
.account-value text {
  font-size: 24rpx;
}

.buttons {
  display: flex;
  margin: 0 20rpx;
}
.split {
  width: 1px;
  height: 24rpx;
  background: #ddd;
  margin-top: 50rpx;
}
.button {
  flex: 1;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 32rpx;
  color: #f93f42;
}
.detail {
  margin: 0 20rpx;
}
.detail-title {
  display: flex;
}
.detail-title > text {
  color: #333;
  font-size: 34rpx;
  padding: 0 20rpx;
  max-width: 80%;
  text-align: center;
}
.detail-title > view {
  flex: 1;
  /* background: #ddd; */
  border-top: 1px solid #ddd;
  /* height: 1px; */
  /* margin-top: 20rpx; */
  transform: translateY(50%);
}

.tip {
  display: block;
  width: 100%;
  color: #aaa;
  font-size: 22rpx;
  text-align: center;
  padding: 20rpx 0 40rpx;
}
.detail-type {
  border-bottom: 1px solid #ddd;
  height: 88rpx;
  line-height: 88rpx;
}
.detail-type-icon {
  width: 40rpx;
  height: 42rpx;
  vertical-align: middle;
}
.detail-type text {
  vertical-align: middle;  
  margin-left: 20rpx;
  display: inline-block;
  color: #333;
  font-size: 34rpx;
}
.detail-item {
  color: #666;
  font-size: 24rpx;
  margin: 40rpx 0 10rpx;
}
.detail-item > view {
  display: flex;
}
.detail-item-title {
  max-width: 50%;
  flex: 1;
}
.detail-item-data {
  max-width: 50%;
  flex: 1;
  text-align: right;
}
.detail-item-data text {
  color: #f93f42;
}
progress {
  border-radius: 3px;
  overflow: hidden;
  margin-top: 16rpx;
}
/* for the fucking alipay progress bug */
.a-progress-inner-outer {
  margin-right: -10px;
}
  