<!--pages/chargeRecords/chargeRecords.wxml-->
<view class="container">
  <text class="title">温馨提示：只可查询近6个月缴费记录</text>

  <!-- 日期选择 -->
  <view class="date-picker">
    <view class="date-header">
      <block a:for="{{years}}" a:key="{{index}}">
        <view class="year">
          <text id="{{item}}" onTap="selectYear" class="{{item == selectYear ? 'year-select' : 'year-unselect'}}">{{item}}</text>
        </view>
      </block>
    </view>
    <view class="data-wrap">
      <view class="date-ul" animation="{{animationData2}}">
        <block a:for="{{availMonth}}" a:key="{{index}}" a:for-index="idx">
          <view class="date" id="{{idx}}">
            <div class="name">
              <block a:for="{{selectYear == currentYear ? availMonth[availMonthL] : availMonth[0]}}" a:key="{{index}}">
                <view  class="month {{item.el?'as':'se'}}" id="{{item.month}}">
                  <button id="{{item.year + item.month}}" onTap="selectMonth" class="{{item.sel ? 'month-select' : 'month-unselect'}}" disabled="{{!item.num}}">{{item.month}}</button>
                  <view class="" class="dot {{ !item.hasData ? 'hidden' : ''}}"></view>
                </view>
              </block>
            </div>
          </view>
        </block>
      </view>
    </view>
  </view>
  
